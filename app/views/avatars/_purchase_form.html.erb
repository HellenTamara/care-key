<%= simple_form_for @avatar do |f| %>
  <fieldset>
    <div class="radio">
      <% Part.where.not(name: @avatar.purchased_parts).where.not(price: 0).where(category: category).each do |part| %>
        <%= f.label "#{category}_id_#{part.id}" do %>
          <%= hidden_field_tag 'name', 'purchased_parts' %>
          <%= f.radio_button "#{category}_id", part.id, class: "image-radio" %>
          <%= cl_image_tag part.photo.key, height: 200 %>
          <%= image_tag 'coins/coin.png', style: "width: 18px; height: 18px;"%> <%="#{part.price}" %>
        <% end %>
      <% end %>
    </div>
  </fieldset>
  <%= f.submit 'Purchase', class: 'btn btn-primary' %>
<% end %>
