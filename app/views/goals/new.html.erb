<div class="block-color d-flex mb-1">
  <h3>My Goals</h3>
</div>
<h4 class="daily-tasks-title">Daily tasks:</h4>
<% if !@goals.empty? %>
  <div class="task-container" data-controller="tasks">
    <%= render "submissions/submission_task_form", goals: @goals,  submission: @submission, score: @score  %>
    <div class="wrapper task-item add"  >
      <button type="button" style="color: #008c9bb5; padding-left: 30px;" class="btn bg-transparent" data-bs-toggle="modal" data-bs-target="#exampleModal">
        <i class="fa-solid fa-plus fa-2xl"></i>
      </button>
      <h4 style="color: #008c9bb5; padding-right: 100px;">Add New Goal</h4>
      <%= render "task_modal" %>
    </div>
    <div data-tasks-target="coin20" class="coin50-task hide">
      <%= image_tag "pop_up/coins_20.png"%>
    </div>
    <div data-tasks-target="coin50" class="coin50-task hide">
      <%= image_tag "pop_up/coins_50.png"%>
    </div>
  </div>
<% else %>
  <p>No tasks here yet! Create one!</p>
<% end %>
<div class="see-progress">
  <%= link_to dashboard_path do  %>
    <p>See your weekly progress <i class="fa-solid fa-arrow-right"></i></p>
  <% end %>
</div>
<div class="space"></div>
