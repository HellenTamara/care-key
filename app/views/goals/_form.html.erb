<%= simple_form_for(@goal) do |f| %>
  <%= f.label :name, 'Sleep'%>
  <%= f.input :name, as: :hidden, input_html: { value: "Sleep" } %>
  <%= f.input :start_date, as: :hidden, input_html: { value: Date.today } %>
  <%= f.input :duration,
  as: :radio_buttons,
  collection_wrapper_tag: :'div',
  collection_wrapper_class: :'sleep-duration',
  item_wrapper_class: :'duration-hours',
  collection: 6..10
  %>
<% end %>
<%= simple_form_for(@goal) do |f| %>
  <%= f.label :name, 'Exercise'%>
  <%= f.input :name, as: :hidden, input_html: { value: "Exercise" } %>
  <%= f.input :start_date, as: :hidden, input_html: { value: Date.today } %>
  <%= f.input :frequency,
  as: :select,
  collection: 0..7
%>
<% end %>
